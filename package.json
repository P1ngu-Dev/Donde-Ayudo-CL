{
  "name": "donde-ayudo-cl",
  "version": "1.0.0",
  "description": "Este proyecto nace ante la necesidad de centralizar la información de ayuda (centros de acopio, albergues, puntos de hidratación) en una sola plataforma simple y eficiente.",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "generate-icons": "node generate-icons.js",
    "analyze": "vite build --mode analyze",
    "backend:dev": "cd backend/server && go run .",
    "backend:build": "cd backend/server && go build -o donde-ayudo-server",
    "backend:start": "cd backend/server && ./donde-ayudo-server",
    "deploy:build": "npm run build && npm run backend:build",
    "docker:build": "docker build -t donde-ayudo-cl .",
    "docker:run": "docker run -p 80:80 -e JWT_SECRET=dev-secret donde-ayudo-cl",
    "docker:dev": "docker-compose up"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/P1ngu-Dev/Donde-Ayudo-CL.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/P1ngu-Dev/Donde-Ayudo-CL/issues"
  },
  "homepage": "https://github.com/P1ngu-Dev/Donde-Ayudo-CL#readme",
  "dependencies": {
    "leaflet": "^1.9.4"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.18",
    "autoprefixer": "^10.4.23",
    "better-sqlite3": "^12.6.2",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.18",
    "vite": "^7.3.1",
    "vite-plugin-pwa": "^1.2.0",
    "workbox-window": "^7.4.0"
  }
}
